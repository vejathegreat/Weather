<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_layout"
    app:startDestination="@id/locationFragment">
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.velaphi.weather.LocationFragment"
        tools:layout="@layout/fragment_location"
        android:label="LocationFragment" />

    <fragment
        android:id="@+id/fiveDaysFragment"
        android:name="com.velaphi.weather.FiveDaysFragment"
        tools:layout="@layout/fragment_five_days"
        android:label="FiveDaysFragment" >
    </fragment>
    <fragment
        android:id="@+id/oneDayDetailFragment"
        android:name="com.velaphi.weather.DailyDetailFragment"
        android:label="OneDayDetailFragment" >
        <argument
            android:name="cityWeatherDetail"
            app:argType="com.velaphi.weather.model.DailyForecastResponse" />
    </fragment>
</navigation>